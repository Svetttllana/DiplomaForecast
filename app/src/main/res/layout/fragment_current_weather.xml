<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFECECEC"
    tools:context=".presentation.CurrentWeatherFragment">

    <TextView
        android:id="@+id/tvCityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="CityName"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imWeatherIcon"
        android:layout_width="match_parent"
        android:layout_height="249dp"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toTopOf="@+id/tempersture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCityName"
        app:layout_constraintVertical_bias="0.0"
        tools:src="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/tvMaxMin"
        android:layout_width="154dp"
        android:layout_height="52dp"
        android:text="88/99"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/humidityContainer"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Condition"
        app:layout_constraintVertical_bias="1.0" />


    <TextView
        android:id="@+id/condition"
        android:layout_width="229dp"
        android:layout_height="42dp"
        android:layout_marginBottom="184dp"
        android:text="Sunny with clouds"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvWeatherIcon"
        app:layout_constraintVertical_bias="0.061" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/humidityContainer"
        android:layout_width="79dp"
        android:layout_height="44dp"
        android:layout_marginBottom="276dp"
        android:background="@color/teal_700"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp"

        android:paddingVertical="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvWeatherIcon"
        app:layout_constraintVertical_bias="0.492">

        <ImageView
            android:id="@+id/humidityIcon"
            android:layout_width="26dp"
            android:layout_height="30dp"
            android:background="#FF068370"


            android:src="@drawable/humidity"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvHumidity"
            android:layout_width="42dp"
            android:layout_height="34dp"
            android:text="60"
            android:textColor="@android:color/white"
android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/humidityIcon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tempersture"
        android:layout_width="175dp"
        android:layout_height="129dp"
        android:layout_marginBottom="228dp"
        android:text="Temperature"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.847"

        app:layout_constraintStart_toEndOf="@+id/humidityContainer" />


    <TextView
        android:id="@+id/region"
        android:layout_width="132dp"
        android:layout_height="33dp"
        android:text="region"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tempersture"
        app:layout_constraintHorizontal_bias="0.065"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/humidityContainer"
        app:layout_constraintVertical_bias="0.048" />

    <TextView
        android:id="@+id/country"
        android:layout_width="126dp"
        android:layout_height="36dp"
        android:text="country"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.017"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/region"
        app:layout_constraintVertical_bias="0.184" />

    <TextView
        android:id="@+id/date"
        android:layout_width="192dp"
        android:layout_height="51dp"
        android:text="12.13.14"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/tempersture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvMaxMin"
        app:layout_constraintTop_toBottomOf="@+id/condition" />

</androidx.constraintlayout.widget.ConstraintLayout>